{
  "private": true,
  "version": "0.2.3",
  "license": "Unlicense",
  "engines": {
    "node": ">=22.17.1"
  },
  "packageManager": "pnpm@10.15.0",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "build": "cross-env NODE_ENV=production pnpm --filter './packages/*' run build",
    "build:dev": "cross-env NODE_ENV=development pnpm --filter './packages/*' run build",
    "release": "node ./scripts/release.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "pack:dev": "pnpm pack --recursive --filter ./packages/* --pack-destination /packed"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "node scripts/verify-commit.js"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --no-warn-ignored"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@eslint/json": "^0.13.2",
    "@mirta/globals": "workspace:*",
    "@mirta/tsconfig": "workspace:*",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-typescript": "^12.1.4",
    "@stylistic/eslint-plugin": "^5.2.3",
    "@types/node": "^24.3.0",
    "@types/prompts": "^2.4.9",
    "chalk": "^5.6.0",
    "conventional-changelog-cli": "^5.0.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.34.0",
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint-plugin-workspaces": "^0.11.0",
    "globals": "^16.3.0",
    "lint-staged": "^16.1.5",
    "prompts": "^2.4.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.48.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-delete": "^3.0.1",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-typescript2": "^0.36.0",
    "semver": "^7.7.2",
    "simple-git-hooks": "^2.13.1",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.41.0",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^3.1.0"
  }
}
