{
  "name": "mirta",
  "description": "The powerful framework to write smart home automation scripts.",
  "version": "0.0.2",
  "license": "Unlicense",
  "keywords": [
    "mirta",
    "wb-rules"
  ],
  "type": "module",
  "files": [
    "dist",
    "types",
    "LICENSE",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "homepage": "https://github.com/wb-mirta/core/tree/latest/packages/mirta#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wb-mirta/core.git",
    "directory": "packages/mirta"
  },
  "bugs": {
    "url": "https://github.com/wb-mirta/core/issues"
  },
  "funding": {
    "type": "individual",
    "url": "https://pay.cloudtips.ru/p/58512cca"
  },
  "scripts": {
    "clean": "rimraf dist build",
    "build": "pnpm clean && rollup -c ../../rollup.config.mjs",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@mirta/basics": "workspace:*",
    "@mirta/globals": "workspace:*",
    "@mirta/polyfills": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  }
}
